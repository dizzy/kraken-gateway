<?xml version="1.0" encoding="UTF-8"?>
<optionsconfig>
    <leftpanel>
        <item type="toggle" sysprop="plugin.gateway.aim.avatars" var="avatars" desckey="gateway.web.settings.buddyicons" default="true"/>
        <item type="toggle" sysprop="plugin.gateway.aim.reconnect" var="autoreconnect" desckey="gateway.web.settings.autoreconnect" default="true">
            <item type="text" sysprop="plugin.gateway.aim.reconnectattempts" var="autoreconnectattempts" desckey="gateway.web.settings.autoreconnectattempts" default="3" size="5" maxlength="5"/>
        </item>
    </leftpanel>
    <rightpanel>
        <item type="text" sysprop="plugin.gateway.aim.connecthost" var="host" desckey="gateway.web.settings.host" default="login.oscar.aol.com"/>
        <item type="text" sysprop="plugin.gateway.aim.connectport" var="port" desckey="gateway.web.settings.port" default="5190"/>
        <item type="toggle" sysprop="plugin.gateway.aim.mailnotifications" var="mailnotifications" desckey="gateway.web.settings.mailnotifications" default="true"/>
        <item type="toggle" sysprop="plugin.gateway.aim.crosschat" var="crosschat" desckey="gateway.oscar.crosschat" default="true"/>
    </rightpanel>
</optionsconfig>